class Solution {
    // Function to check whether there is a subarray present with 0-sum or not.
    static boolean findsum(int arr[]) {
        // Your code here
        HashSet<Integer> h1=new HashSet<>();
        int sum=0;
        for(int i=0;i<arr.length;i++){
            sum+=arr[i];
            if(h1.contains(sum)==true || sum==0){
                return true;
            }
            h1.add(sum);
        }
        return false;
    }
}
