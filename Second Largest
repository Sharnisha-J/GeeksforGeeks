class Solution {
    public int getSecondLargest(int[] arr) {
        // code here
        int max=Integer.MIN_VALUE;
        int smax=Integer.MIN_VALUE;
        for(int i=0;i<arr.length;i++){
            max=Math.max(arr[i],max);
        }
        for(int i=0;i<arr.length;i++){
            if(arr[i]!=max){
                smax=Math.max(arr[i],smax);
            }
        }
        return smax<0 ?-1:smax;
    }
}
