class Solution {
    public int maximumSumSubarray(int[] arr, int k) {
        // Code here
        int avgsum=0;
        for(int i=0;i<k;i++){
            avgsum+=arr[i];
        }
        int maxsum=avgsum;
        for(int i=k;i<arr.length;i++){
            avgsum+=arr[i]-arr[i-k];
            maxsum=Math.max(maxsum,avgsum);
        }
        return maxsum;
    }
}
