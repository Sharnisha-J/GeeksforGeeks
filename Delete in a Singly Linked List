/* Linklist node structure
class Node
{
    int data;
    Node next;

    Node(int d)
    {
        data = d;
        next = null;
    }
}*/
class Solution {
    Node deleteNode(Node head, int x) {
        // code here
        Node p=head;
        Node q=null;
        x--;
        if(x==0){
            Node temp=head;
            head=head.next;
            temp.next=null;
            return head;
        }
        while(p!=null && x!=0)
        {
            q=p;
            p=p.next;
            x--;
        }
        q.next=p.next;
        p.next=null;
        return head;
    }
}
