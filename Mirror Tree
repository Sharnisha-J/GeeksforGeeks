// User function Template for Java

/* A Binary Tree node
class Node
{
    int data;
    Node left, right;
   Node(int item)
   {
        data = item;
        left = right = null;
    }
} */

class Solution {
    // Function to convert a binary tree into its mirror tree.
    void mirror(Node node) {
        // Your code here
        solve(node);
    }
    Node solve(Node node){
        if(node==null){
            return null;
        }
        Node mleft=solve(node.left);
        Node mright=solve(node.right);
        node.left=mright;
        node.right=mleft;
        return node;
    }
}
