class Solution {
    public boolean searchMatrix(int[][] mat, int x) {
        // code here
        int i=0,j=mat[0].length-1;
        while(i<mat.length && j>=0){
            if(mat[i][j]==x){
                return true;
            }
            if(mat[i][j]>x){
                j--;
            }
            else{
                i++;
            }
        }
        return false;
    }
}
